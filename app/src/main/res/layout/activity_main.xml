<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/button"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" android:id="@+id/notificationButton"/>
    <Button
            android:text="@string/settings"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/notificationButton2"
            android:layout_height="wrap_content" android:id="@+id/settingsButton"/>
    <Button
            android:text="Notify2"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/notificationButton"
            android:layout_height="wrap_content" android:id="@+id/notificationButton2"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@id/notificationButton"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/giphy" android:id="@+id/imageView"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/settingsButton"
            android:layout_height="wrap_content" android:id="@+id/startBtn"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/startBtn"
            android:layout_height="wrap_content" android:id="@+id/stopBtn"/>

